<ResourceDictionary x:Class="VPlayer.StylesDictionaries.WindowStyle"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:VPlayer.StylesDictionaries">

  <ResourceDictionary.MergedDictionaries>
    <ResourceDictionary Source="pack://application:,,,/VPlayer.DarkTheme;component/Styles/StylesDictionaries/Colors.xaml" />
  </ResourceDictionary.MergedDictionaries>

  <Style TargetType="HeaderedContentControl">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="HeaderedContentControl">
          <Border Padding="{TemplateBinding Padding}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}">
            <Grid>
              <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition />
              </Grid.RowDefinitions>

              <Border Padding="10" Background="#151515">
                <TextBlock HorizontalAlignment="Center"
                           FontSize="14"
                           Foreground="#ccc"
                           Text="{TemplateBinding Header}" />
              </Border>

              <ContentPresenter Grid.Row="1"
                                Margin="0,10,0,0"
                                Content="{TemplateBinding Content}" />
            </Grid>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>


  <Style x:Key="WindowsChromeButtonStyle" TargetType="Button">
    <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True" />
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="HorizontalAlignment" Value="Center" />
    <Setter Property="FontSize" Value="25" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Foreground" Value="#616161" />
    <Setter Property="Width" Value="50" />
    <Setter Property="CommandParameter" Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type Button}">
          <Border Name="Border"
                  Margin="{TemplateBinding Margin}"
                  Padding="15,0"
                  Background="{TemplateBinding Background}">
            <ContentPresenter Content="{TemplateBinding Content}" />
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>

    <Style.Triggers>
      <Trigger Property="IsMouseOver" Value="True">
        <Setter Property="Foreground" Value="WhiteSmoke" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="Background" Value="#20ffffff" />
      </Trigger>
    </Style.Triggers>
  </Style>

  <Style TargetType="{x:Type Window}">
    <Setter Property="Foreground" Value="GhostWhite" />
    <Setter Property="WindowStyle" Value="None" />
    <Setter Property="OverridesDefaultStyle" Value="True" />
    <Setter Property="Topmost" Value="{Binding TopMost}" />
    <Setter Property="Background" Value="{StaticResource TopWindowsBrush}" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type Window}">
          <Border>
            <Grid>
              <!--  The main window content  -->
              <Grid Background="{TemplateBinding Background}">
                <Grid.RowDefinitions>
                  <RowDefinition Height="auto" />
                  <RowDefinition Height="auto" />
                  <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid x:Name="WindowsChromeGrid"
                      Height="35"
                      Panel.ZIndex="1"
                      Visibility="{Binding WindowChromeVisiblity}">
                  <Grid.Background>
                    <SolidColorBrush Opacity="0.03" Color="{StaticResource DefaultWhiteColor}" />
                  </Grid.Background>
                  <StackPanel HorizontalAlignment="Left"
                              VerticalAlignment="Top"
                              Orientation="Horizontal">
                    <!--  Icon  -->
                    <Image Width="20"
                           Height="20"
                           Margin="8,8,15,0"
                           Source="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Icon}" />
                    <!--  Title  -->
                    <TextBlock Margin="0,3,0,0"
                               VerticalAlignment="Center"
                               FontSize="15"
                               FontWeight="DemiBold"
                               Foreground="#ccffffff"
                               Text="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Title}" />
                  </StackPanel>
                  <!--  Window buttons  -->
                  <Grid HorizontalAlignment="Right" VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="auto" />
                      <ColumnDefinition Width="auto" />
                      <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button x:Name="MinimizeButton"
                            Command="{Binding MinimizeCommand}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window, Mode=FindAncestor}}"
                            Style="{StaticResource WindowsChromeButtonStyle}">
                      <Rectangle Width="10"
                                 Height="2"
                                 VerticalAlignment="Center"
                                 Stretch="UniformToFill"
                                 Stroke="{Binding ElementName=MinimizeButton, Path=Foreground}"
                                 StrokeThickness="2" />
                    </Button>

                    <Button x:Name="MaximizeButton"
                            Grid.Column="1"
                            Command="{Binding MaximizeCommand}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window, Mode=FindAncestor}}">
                      <Button.Style>
                        <Style BasedOn="{StaticResource WindowsChromeButtonStyle}" TargetType="Button">
                          <Setter Property="Visibility" Value="Collapsed" />
                          <Style.Triggers>
                            <MultiDataTrigger>
                              <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding WindowState, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" Value="Normal" />
                              </MultiDataTrigger.Conditions>
                              <Setter Property="Visibility" Value="Visible" />
                            </MultiDataTrigger>
                          </Style.Triggers>
                        </Style>
                      </Button.Style>
                      <Button.Content>
                        <Rectangle Width="10"
                                   Height="10"
                                   Stretch="UniformToFill"
                                   Stroke="{Binding ElementName=MaximizeButton, Path=Foreground}"
                                   StrokeThickness="2" />
                      </Button.Content>
                    </Button>

                    <Button x:Name="NormalizeButton"
                            Grid.Column="1"
                            Command="{Binding NormalizeCommand}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window, Mode=FindAncestor}}">
                      <Button.Style>
                        <Style BasedOn="{StaticResource WindowsChromeButtonStyle}" TargetType="Button">
                          <Setter Property="Visibility" Value="Collapsed" />

                          <Style.Triggers>
                            <MultiDataTrigger>
                              <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding WindowState, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" Value="Maximized" />
                              </MultiDataTrigger.Conditions>
                              <Setter Property="Visibility" Value="Visible" />
                            </MultiDataTrigger>
                          </Style.Triggers>
                        </Style>
                      </Button.Style>
                      <Button.Content>
                        <Path Width="10"
                              Height="10"
                              Data="M114.279,0v114.274H0v378.034h378.039V378.029h114.269V0H114.279z M358.346,472.615H19.692V133.966h338.654V472.615z M472.615,358.337h-94.577V114.274H133.971V19.692h338.644V358.337z"
                              Stretch="UniformToFill"
                              Stroke="{Binding ElementName=NormalizeButton, Path=Foreground}"
                              StrokeThickness="1.5" />
                      </Button.Content>
                    </Button>

                    <Button x:Name="CloseButton"
                            Grid.Column="2"
                            BorderThickness="0"
                            Command="{Binding CloseCommand}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window, Mode=FindAncestor}}"
                            Content="X">
                      <Button.Style>
                        <Style BasedOn="{StaticResource WindowsChromeButtonStyle}" TargetType="Button">
                          <Setter Property="FontSize" Value="15" />
                          <Setter Property="Template">
                            <Setter.Value>
                              <ControlTemplate TargetType="{x:Type Button}">
                                <Border Name="Border"
                                        Padding="15,0"
                                        Background="{TemplateBinding Background}">
                                  <TextBlock HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                                             FontWeight="Bold"
                                             Foreground="{TemplateBinding Foreground}"
                                             Text="{TemplateBinding Content}" />
                                </Border>
                              </ControlTemplate>
                            </Setter.Value>
                          </Setter>

                          <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                              <Setter Property="Foreground" Value="White" />
                              <Setter Property="Cursor" Value="Hand" />
                              <Setter Property="BorderBrush" Value="Transparent" />
                              <Setter Property="Background" Value="#ccd43939" />
                            </Trigger>
                          </Style.Triggers>
                        </Style>
                      </Button.Style>
                    </Button>
                  </Grid>
                </Grid>

                <Border Grid.Row="2">
                  <AdornerDecorator>
                    <ContentPresenter Content="{TemplateBinding Content}" />
                  </AdornerDecorator>
                </Border>
              </Grid>
            </Grid>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>

    <Setter Property="WindowChrome.WindowChrome">
      <Setter.Value>
        <WindowChrome CaptionHeight="35" ResizeBorderThickness="10" />
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>