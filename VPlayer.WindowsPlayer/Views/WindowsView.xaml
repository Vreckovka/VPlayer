<UserControl x:Class="VPlayer.WindowsPlayer.Views.WindowsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mvvm="http://prismlibrary.com/"
             xmlns:regions="clr-namespace:VPlayer.Core.Modularity.Regions;assembly=VPlayer.Core"
             xmlns:controls1="clr-namespace:VCore.Controls;assembly=VCore.WPF"
             d:DesignHeight="850"
             d:DesignWidth="800"
             mc:Ignorable="d">

  <UserControl.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/VPlayer.Core;component/Styles/ControlsTemplates/ButtonWithIconTemplate.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </UserControl.Resources>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    

    <Border Padding="10" Background="{StaticResource 10_WhiteTransparentBrush}">
      <StackPanel Orientation="Horizontal">
        <controls1:ButtonWithIcon Content="Load from folder" 
                                 IconPathStyle="{StaticResource OpenFolder}" 
                                 Command="{Binding LoadFromFolder}"
                                 IconHoverColor="{StaticResource DefaultRedColorDim}"
                                 IconMargin="0 0 5 0"
                                 Margin="1 0 0 0"/>
      </StackPanel>
    </Border>


    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="auto" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>

      <Border BorderBrush="{StaticResource 10_WhiteTransparentBrush}">
        <ListView ItemsSource="{Binding NavigationViewModel.Items}" Style="{StaticResource ListView_MenuStyle}" />
      </Border>

      <ContentControl Name="LibraryRegion"
                            Grid.Column="1"
                            mvvm:RegionManager.RegionName="{x:Static regions:RegionNames.WindowsPlayerContentRegion}" />
    </Grid>
  </Grid>
</UserControl>