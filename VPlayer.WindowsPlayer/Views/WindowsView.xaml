<UserControl x:Class="VPlayer.WindowsPlayer.Views.WindowsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls1="clr-namespace:VCore.Controls;assembly=VCore.WPF"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mvvm="http://prismlibrary.com/"
             xmlns:regions="clr-namespace:VPlayer.Core.Modularity.Regions;assembly=VPlayer.Core"
             d:DesignHeight="850"
             d:DesignWidth="800"
             mc:Ignorable="d">

  <UserControl.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/VPlayer.Core;component/Styles/ControlsTemplates/ButtonWithIconTemplate.xaml" />
      </ResourceDictionary.MergedDictionaries>

      <Style x:Key="MenuuStyle" TargetType="MenuItem">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="FontWeight" Value="Bold" />
      </Style>
    </ResourceDictionary>
  </UserControl.Resources>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="auto" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>


    <ListView Grid.Row="0"
              ItemsSource="{Binding NavigationViewModel.Items}"
              Style="{StaticResource ListView_MenuStyle}">
      <ListView.ItemsPanel>
        <ItemsPanelTemplate>
          <StackPanel Orientation="Horizontal" />
        </ItemsPanelTemplate>
      </ListView.ItemsPanel>
    </ListView>

    <Menu Grid.Column="1"
          Padding="10"
          Background="{StaticResource 10_WhiteTransparentBrush}">
      <MenuItem BorderThickness="0"
                Header="Load"
                Style="{StaticResource MenuuStyle}">

        <MenuItem Background="{StaticResource TopWindowsBrush}"
                  Command="{Binding LoadFromFolder}"
                  Header="Music"
                  Style="{StaticResource MenuuStyle}" />
        <MenuItem Background="{StaticResource TopWindowsBrush}"
                  Command="{Binding LoadTvShow}"
                  Header="Tv show"
                  Style="{StaticResource MenuuStyle}" />
      </MenuItem>
    </Menu>




    <Border Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            BorderBrush="{StaticResource 10_WhiteTransparentBrush}"
            BorderThickness="0,3,0,0">
      <ContentControl mvvm:RegionManager.RegionName="{x:Static regions:RegionNames.WindowsPlayerContentRegion}" />
    </Border>

  </Grid>
</UserControl>