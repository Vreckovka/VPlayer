<UserControl
    x:Class="VPlayer.Library.Views.LibraryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:VPlayer.Core.Controls;assembly=VPlayer.Core"
    xmlns:controls1="clr-namespace:WpfToolkit.Controls;assembly=VirtualizingWrapPanel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:VPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:regions="http://prismlibrary.com/"
    d:DesignHeight="450"
    d:DesignWidth="800"
    regions:ViewModelLocator.AutoWireViewModel="True"
    Background="{StaticResource BackgroudPageBrush}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style TargetType="ListViewItem">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource DefaultRedBrush}" />
                </DataTrigger>

                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding IsPlaying}" Value="True" />
                        <Condition Binding="{Binding RelativeSource={RelativeSource self}, Path=IsSelected}" Value="True" />
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Foreground" Value="{StaticResource DefaultWhiteBrush}" />
                </MultiDataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border
            Grid.RowSpan="2"
            Margin="0,0,5,0"
            BorderBrush="{StaticResource 10_WhiteTransparentBrush}">
            <ListView x:Name="MenuListView" SelectionChanged="MenuListView_SelectionChanged">
                <ListView.Style>
                    <Style BasedOn="{StaticResource ListView_MenuStyle}" TargetType="ListView" />
                </ListView.Style>

                <ListViewItem Content="Artist" IsSelected="True" />
                <ListViewItem Content="Albums" >
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseLeftButtonUp">
                            <i:InvokeCommandAction Command="{Binding ShowAlbums}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ListViewItem>
                <ListViewItem Content="Songs" IsEnabled="False" />
                <ListViewItem Content="Genres" IsEnabled="False" />

                
            </ListView>
        </Border>

        <controls:Finder Grid.Row="0" Grid.Column="1" Margin="5"/>

        <controls:PlayableWrapPanel
            Grid.Row="1"
            Grid.Column="1"
            ItemsSource="{Binding ActualCollectionViewModel.PlayableItems}"
            Margin="5,0">
            <controls:PlayableWrapPanel.ItemTemplate>
                <DataTemplate>
                    <controls:PlayableWrapPanelItem
                        BottomText="{Binding BottomText}"
                        DefaultImage="pack://application:,,,/VPlayer;component/Resources/VPlayer_Artist.png"
                        HeaderText="{Binding Name}"
                        ImageThumbnail="{Binding ImageThumbnail}"
                        IsPlaying="{Binding IsPlaying}" />
                </DataTemplate>
            </controls:PlayableWrapPanel.ItemTemplate>
        </controls:PlayableWrapPanel>
    </Grid>
</UserControl>
