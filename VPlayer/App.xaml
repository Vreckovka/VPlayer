<Application x:Class="VPlayer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:VPlayer"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="StylesDictionaries/ColorsStyle.xaml"/>
                <ResourceDictionary Source="StylesDictionaries/WindowsStyle.xaml"/>
                <ResourceDictionary Source="StylesDictionaries/ListViewsStyle.xaml"/>
                <ResourceDictionary Source="StylesDictionaries/ButtonsStyle.xaml"/>
                <ResourceDictionary Source="StylesDictionaries/DataTemplates.xaml"/>
                <ResourceDictionary Source="StylesDictionaries/TextBlocksStyle.xaml"/>
                <ResourceDictionary Source="StylesDictionaries/MenusStyle.xaml"/>
                <ResourceDictionary Source="StylesDictionaries/SlidersStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
