<Window
    x:Class="VPlayer.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:design="clr-namespace:VPlayer.Design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:regions="clr-namespace:VPlayer.Core.Modularity.Regions;assembly=VPlayer.Core"
    Title="{Binding Title}"
    Width="1200"
    Height="850"
    MinWidth="500"
    MinHeight="400"
    d:DataContext="{d:DesignInstance Type={x:Type design:MainWindowDesignViewModel},
                                     IsDesignTimeCreatable=True}"
    Icon="/Includes/VPlayerLogo.png"
    Style="{StaticResource {x:Type Window}}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Border
            Margin="0,0,5,0"
            BorderBrush="{StaticResource 10_WhiteTransparentBrush}"
            BorderThickness="0,0,2,0">
            <ListView ItemsSource="{Binding NavigationViewModel.Items}" Style="{StaticResource ListView_MenuStyle}" />
        </Border>

        <ContentControl
            Grid.Row="0"
            Grid.Column="1"
            prism:RegionManager.RegionName="{x:Static regions:RegionNames.ContentRegion}" />

        <Button
            Grid.Row="0"
            Grid.Column="0"
            Height="25"
            Click="Button_Click"
            Content="Clear" />

        <ContentControl
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            prism:RegionManager.RegionName="{x:Static regions:RegionNames.PlayerRegion}" />
    </Grid>
</Window>
