<Window x:Class="VPlayer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:core="clr-namespace:VCore.AttachedProperties;assembly=VCore"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:design="clr-namespace:VPlayer.Design"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:regions="clr-namespace:VPlayer.Core.Modularity.Regions;assembly=VPlayer.Core"
        xmlns:text="clr-namespace:VCore.Behaviors.Text;assembly=VCore"
        Title="{Binding Title}"
        Width="1210"
        Height="850"
        MinWidth="500"
        MinHeight="400"
        d:DataContext="{d:DesignInstance Type={x:Type design:MainWindowDesignViewModel},
                                         IsDesignTimeCreatable=True}"
        Icon="/Includes/VPlayerLogo.png"
        Style="{StaticResource {x:Type Window}}"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="150" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <Grid.RowDefinitions>
      <RowDefinition />
      <RowDefinition Height="auto" />
    </Grid.RowDefinitions>

    <Border Name="MenuBorder"
            Margin="0,0,5,0"
            Background="Transparent"
            BorderBrush="{StaticResource 10_WhiteTransparentBrush}"
            BorderThickness="0,0,2,0">

      <ListView ItemsSource="{Binding NavigationViewModel.Items}" Style="{StaticResource ListView_MenuStyle}" />
    </Border>
    <Path Margin="0,135"
          Fill="Red" />

    <ContentControl Grid.Row="0"
                    Grid.Column="1"
                    prism:RegionManager.RegionName="{x:Static regions:RegionNames.ContentRegion}" />

    <Button Grid.Row="0"
            Grid.Column="0"
            Height="25"
            Click="Button_Click"
            Content="Clear" />




    <ContentControl Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    prism:RegionManager.RegionName="{x:Static regions:RegionNames.PlayerRegion}" />


  </Grid>
</Window>
