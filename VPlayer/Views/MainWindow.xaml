<Window x:Class="VPlayer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:design="clr-namespace:VPlayer.Design"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:regions="clr-namespace:VPlayer.Core.Modularity.Regions;assembly=VPlayer.Core"
        xmlns:controls1="clr-namespace:VCore.Controls;assembly=VCore.WPF"
        Title="{Binding Title}"
        Width="1288"
        Height="830"
        MinWidth="500"
        MinHeight="400"
        d:DataContext="{d:DesignInstance Type={x:Type design:MainWindowDesignViewModel},
                                         IsDesignTimeCreatable=True}"
        AllowsTransparency="True"
        Icon="/Includes/VPlayerLogo.png"
        Style="{StaticResource {x:Type Window}}"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Closing="OnClosing">

  <Window.TaskbarItemInfo>
    <TaskbarItemInfo>
      <TaskbarItemInfo.ThumbButtonInfos>
        <ThumbButtonInfo Description="First Button" />
        <ThumbButtonInfo Description="Second Button" />
        <ThumbButtonInfo Description="Third Button" />
      </TaskbarItemInfo.ThumbButtonInfos>
    </TaskbarItemInfo>
  </Window.TaskbarItemInfo>

  <Grid >
    <Grid.RowDefinitions>
      <RowDefinition Height="auto" />
      <RowDefinition />
      <RowDefinition Height="auto" />
    </Grid.RowDefinitions>

    <Border Background="#06ffffff" Height="45" >
      <StackPanel Orientation="Horizontal">
        <TextBlock Text="Selected player: " FontSize="17" VerticalAlignment="Center" Foreground="{StaticResource 100_WhiteTransparentBrush}" Margin="5,0"/>

        <controls1:PathButton Margin="0,0,35,5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    BorderThickness="0"
                    Foreground="#DB505050"
                    IsChecked="{Binding IsWindows}"
                    IsEnabled="False"
                    PathStyle="{StaticResource Windows}"/>

     
      </StackPanel>
   
    </Border>

  
    <Button Content="DELETE ALL" Click="Button_Click" Visibility="Collapsed"/>

    <ContentControl Grid.Row="1"
                    prism:RegionManager.RegionName="{x:Static regions:RegionNames.ContentRegion}" />

    <ContentControl Grid.Row="2"
                    Grid.Column="0"
                    prism:RegionManager.RegionName="{x:Static regions:RegionNames.PlayerRegion}" />
  </Grid>
</Window>