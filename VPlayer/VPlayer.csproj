<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UseWPF>true</UseWPF>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>

    <ApplicationIcon>Includes/VPlayerLogo.ico</ApplicationIcon>


  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <PlatformTarget>AnyCPU</PlatformTarget>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <OutputPath>D:\VPlayer</OutputPath>
  </PropertyGroup>
  <ItemGroup>
    <None Remove="Includes\VPlayerLogo.ico" />
    <None Remove="Includes\VPlayerLogo.png" />
    <None Remove="Resources\play-and-pause-button.png" />
  </ItemGroup>
  <ItemGroup>
    <Resource Include="Includes\VPlayerLogo.ico" />
    <Resource Include="Includes\VPlayerLogo.png" />
    <Resource Include="Resources\play-and-pause-button.png" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="Ninject" Version="3.3.4" />
    <PackageReference Include="Prism.Ninject" Version="7.2.0.1422" />
    <PackageReference Include="Prism.Wpf" Version="7.2.0.1422" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="5.0.3" />
    <PackageReference Include="Selenium.WebDriver.ChromeDriver" Version="88.0.4324.9600" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\CustomLibraries\Logger\Logger.csproj" />
    <ProjectReference Include="..\..\CustomLibraries\VCore.Standard\VCore.Standard.csproj" />
    <ProjectReference Include="..\..\CustomLibraries\VCore\VCore.WPF.csproj" />
    <ProjectReference Include="..\KeyListener\Listener.csproj" />
    <ProjectReference Include="..\VPlayer.AudioStorage\VPlayer.AudioStorage.csproj" />
    <ProjectReference Include="..\VPlayer.Core\VPlayer.Core.csproj" />
    <ProjectReference Include="..\VPlayer.DarkTheme\VPlayer.DarkTheme.csproj" />
    <ProjectReference Include="..\VPlayer.Library\VPlayer.Library.csproj" />
    <ProjectReference Include="..\VPlayer.Player\VPlayer.Player.csproj" />
    <ProjectReference Include="..\VPlayer.WindowsPlayer\VPlayer.WindowsPlayer.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Hqub.MusicBrainz.API">
      <HintPath>..\DLL\Hqub.MusicBrainz.API.dll</HintPath>
    </Reference>
    <Reference Include="System.Runtime.WindowsRuntime">
      <HintPath>..\DLL\System.Runtime.WindowsRuntime.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>
