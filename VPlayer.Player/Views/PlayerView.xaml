<UserControl
  x:Class="VPlayer.Player.Views.PlayerView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
  xmlns:behaviors2="clr-namespace:VCore.WPF.Behaviors;assembly=VCore.WPF"
  xmlns:controls="clr-namespace:VVLC.Controls;assembly=VVLC"
  xmlns:controls2="clr-namespace:VCore.WPF.Controls;assembly=VCore.WPF"
  xmlns:converters="clr-namespace:VCore.WPF.Converters;assembly=VCore.WPF"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:global="clr-namespace:;assembly=VCore.WPF"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:numericUpAndDown="clr-namespace:VCore.WPF.Controls.NumericUpAndDown;assembly=VCore.WPF"
  xmlns:popups="clr-namespace:VCore.WPF.Behaviors.Popups;assembly=VCore.WPF"
  xmlns:sliders="clr-namespace:VCore.WPF.Behaviors.Sliders;assembly=VCore.WPF"
  xmlns:soundManagement="clr-namespace:SoundManagement;assembly=SoundManagement"
  xmlns:statusMessage="clr-namespace:VCore.WPF.Controls.StatusMessage;assembly=VCore.WPF"
  xmlns:userControls="clr-namespace:VPlayer.Player.UserControls;assembly=VPlayer.Core"
  xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
  Focusable="False"
  mc:Ignorable="d">

  <UserControl.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/VPlayer.Player;component/Views/PlayerViewResources.xaml" />
        <ResourceDictionary Source="pack://application:,,,/VPlayer.Core;component/Styles/StylesDictionaries/DataTemplates.xaml" />
        <ResourceDictionary Source="pack://application:,,,/VPlayer.DarkTheme;component/Styles/StylesDictionaries/Colors.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </UserControl.Resources>

  <Border
    x:Name="MainBorder"
    Height="75"
    Padding="4"
    Focusable="True">
    <Border.Background>
      <LinearGradientBrush StartPoint="0 1" EndPoint="0 0">
        <GradientStop Offset="1" Color="#101010" />
        <GradientStop Offset="0" Color="{StaticResource BackgroudColor2}" />
      </LinearGradientBrush>
    </Border.Background>
    <Grid x:Name="PlayerGrid" Focusable="False">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="auto" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition />
        <ColumnDefinition Width="auto" />
        <ColumnDefinition Width="auto" />
      </Grid.ColumnDefinitions>

      <Border
        Grid.Column="1"
        Margin="0,0,0,1.5"
        HorizontalAlignment="Left"
        VerticalAlignment="Bottom"
        Background="Transparent">
        <Grid x:Name="GridParent" DataContext="{Binding ActualViewModel}">
          <Grid>
            <Grid.RowDefinitions>
              <RowDefinition Height="auto" />
              <RowDefinition Height="auto" />
              <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="auto" />
              </Grid.ColumnDefinitions>

              <controls2:PathButton
                x:Name="InfoIcon"
                Padding="2"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Panel.ZIndex="2"
                DataContext="{Binding ActualItem}"
                IconHeight="11"
                IconMargin="0"
                IconWidth="11"
                PathStyle="{StaticResource Info}">
                <controls2:PathButton.Style>
                  <Style BasedOn="{StaticResource {x:Type controls2:PathButton}}" TargetType="{x:Type controls2:PathButton}">
                    <Setter Property="IconHoverColor" Value="#80ffffff" />
                    <Setter Property="IconDefaultColor" Value="#50ffffff" />
                    <Setter Property="IconCheckedColor" Value="#4291db" />
                    <Setter Property="Opacity" Value="1" />
                    <Setter Property="Margin" Value="-3,-5,4,-5" />

                    <Style.Triggers>
                      <DataTrigger Binding="{Binding ExtraData}" Value="{x:Null}">
                        <Setter Property="IconHoverColor" Value="#757575" />
                        <Setter Property="IconDefaultColor" Value="#656565" />
                      </DataTrigger>

                      <DataTrigger Binding="{Binding ExtraData, Converter={converters:IsNullConverter}}" Value="false">
                        <Setter Property="IconHoverColor" Value="#5baefc" />
                        <Setter Property="IconCheckedColor" Value="#4291db" />
                        <Setter Property="IconDefaultColor" Value="#c04291db" />
                      </DataTrigger>

                      <DataTrigger Binding="{Binding}" Value="{x:Null}">
                        <Setter Property="Visibility" Value="Collapsed" />
                      </DataTrigger>
                    </Style.Triggers>
                  </Style>
                </controls2:PathButton.Style>

                <controls2:PathButton.ToolTip>
                  <Border Background="Transparent">
                    <Grid>
                      <ContentPresenter Content="{Binding}" ContentTemplateSelector="{StaticResource WindowsPlayerItemsTooltipTemplateSelector}" />
                    </Grid>
                  </Border>
                </controls2:PathButton.ToolTip>
              </controls2:PathButton>

              <Popup
                AllowsTransparency="False"
                DataContext="{Binding ActualItem}"
                HorizontalOffset="5"
                IsOpen="{Binding ElementName=InfoIcon, Path=IsChecked}"
                Placement="Bottom"
                PlacementTarget="{Binding ElementName=InfoIcon}"
                StaysOpen="False"
                VerticalOffset="10">
                <Border Padding="5">
                  <Border.Style>
                    <Style TargetType="Border">
                      <Setter Property="Background" Value="#151515" />
                      <Setter Property="BorderBrush" Value="#303030" />
                      <Setter Property="BorderThickness" Value="1.5" />
                    </Style>
                  </Border.Style>
                  <Grid>
                    <ContentPresenter Content="{Binding}" ContentTemplateSelector="{StaticResource WindowsPlayerItemsTooltipTemplateSelector}" />
                  </Grid>
                </Border>

                <b:Interaction.Behaviors>
                  <popups:MovePopupWithParentBehavior />
                </b:Interaction.Behaviors>
              </Popup>

              <TextBlock
                Grid.Column="1"
                HorizontalAlignment="Left"
                FontSize="14"
                FontWeight="DemiBold"
                Foreground="#9ca379"
                Grid.IsSharedSizeScope="True"
                Text="{Binding ActualItem.Model.Name}"
                ToolTip="{Binding ActualItem.Model.Name}" />



              <controls2:PathButton
                x:Name="CinemaSettingsButton"
                Grid.Column="3"
                HorizontalAlignment="Left"
                FontSize="13"
                FontWeight="Bold"
                ForegroundCheckedColor="White"
                ForegroundDefaultColor="#15ffffff"
                ForegroundHoverColor="#ccc"
                IconCheckedColor="{StaticResource DefaultRedColor}"
                IconDefaultColor="#555555"
                IconHoverColor="#ccc"
                PathStyle="{StaticResource gear}">
                <controls2:PathButton.Style>
                  <Style BasedOn="{StaticResource {x:Type controls2:PathButton}}" TargetType="controls2:PathButton">
                    <Setter Property="Content" Value="Cinema" />

                    <Style.Triggers>
                      <DataTrigger Binding="{Binding Source={StaticResource LyricsConstants}, Path=Instance.IsCinemaMode}" Value="false">
                        <Setter Property="Visibility" Value="Collapsed" />
                      </DataTrigger>
                    </Style.Triggers>
                  </Style>
                </controls2:PathButton.Style>
              </controls2:PathButton>

              <Popup
                AllowsTransparency="True"
                DataContext="{Binding Source={StaticResource LyricsConstants}, Path=Instance}"
                HorizontalOffset="-10"
                IsOpen="{Binding ElementName=CinemaSettingsButton, Path=IsChecked}"
                PlacementTarget="{Binding ElementName=SettingsButton}"
                PopupAnimation="Fade"
                VerticalOffset="-204">
                <Border
                  Padding="15"
                  Background="#ee101010"
                  BorderBrush="#95454545"
                  BorderThickness="1"
                  CornerRadius="15">
                  <Grid>
                    <Border
                      Grid.Row="1"
                      Padding="5"
                      HorizontalAlignment="Left"
                      BorderBrush="#95454545"
                      BorderThickness="0,1,0,0">
                      <StackPanel>
                        <Grid>
                          <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto" />
                          </Grid.ColumnDefinitions>
                          <TextBlock
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Foreground="#30ffffff"
                            Text="Bottom Lyrics color" />

                          <TextBox
                            Grid.Column="1"
                            Foreground="White"
                            Text="{Binding VizualizerBottomColor}" />


                          <controls2:PathButton
                            x:Name="bottom_color_picker_toggle"
                            Grid.Column="2"
                            Width="20"
                            Height="18"
                            HorizontalAlignment="Right"
                            Background="{Binding VizualizerBottomColor}"
                            BorderCheckedColor="{StaticResource DefaultRedColor}"
                            BorderDefaultColor="#454545"
                            BorderHoverColor="{StaticResource DefaultRedColor}"
                            BorderThickness="2"
                            EnableBorderAnimation="True" />

                          <Popup IsOpen="{Binding Path=IsChecked, ElementName=bottom_color_picker_toggle}" StaysOpen="False">
                            <xctk:ColorCanvas
                              Background="#151515"
                              BorderBrush="#45ffffff"
                              BorderThickness="1"
                              SelectedColor="{Binding VizualizerBottomColor, Converter={converters:StringToColorConverter}}" />
                          </Popup>

                        </Grid>


                        <Grid>
                          <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto" />
                          </Grid.ColumnDefinitions>
                          <TextBlock
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Foreground="#30ffffff"
                            Text="MIddle Lyrics color" />

                          <TextBox
                            Grid.Column="1"
                            Foreground="White"
                            Text="{Binding VizualizerTopColor}" />


                          <controls2:PathButton
                            x:Name="middle_color_picker_toggle"
                            Grid.Column="2"
                            Width="20"
                            Height="18"
                            HorizontalAlignment="Right"
                            Background="{Binding VizualizerMiddleColor}"
                            BorderCheckedColor="{StaticResource DefaultRedColor}"
                            BorderDefaultColor="#454545"
                            BorderHoverColor="{StaticResource DefaultRedColor}"
                            BorderThickness="2"
                            EnableBorderAnimation="True" />

                          <Popup IsOpen="{Binding Path=IsChecked, ElementName=middle_color_picker_toggle}" StaysOpen="False">
                            <xctk:ColorCanvas
                              Background="#151515"
                              BorderBrush="#45ffffff"
                              BorderThickness="1"
                              SelectedColor="{Binding VizualizerMiddleColor, Converter={converters:StringToColorConverter}}" />
                          </Popup>

                        </Grid>

                        <Grid>
                          <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto" />
                          </Grid.ColumnDefinitions>
                          <TextBlock
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Foreground="#30ffffff"
                            Text="Top Lyrics color" />

                          <TextBox
                            Grid.Column="1"
                            Foreground="White"
                            Text="{Binding VizualizerTopColor}" />


                          <controls2:PathButton
                            x:Name="top_color_picker_toggle"
                            Grid.Column="2"
                            Width="20"
                            Height="18"
                            HorizontalAlignment="Right"
                            Background="{Binding VizualizerTopColor}"
                            BorderCheckedColor="{StaticResource DefaultRedColor}"
                            BorderDefaultColor="#454545"
                            BorderHoverColor="{StaticResource DefaultRedColor}"
                            BorderThickness="2"
                            EnableBorderAnimation="True" />

                          <Popup IsOpen="{Binding Path=IsChecked, ElementName=top_color_picker_toggle}" StaysOpen="False">
                            <xctk:ColorCanvas
                              Background="#151515"
                              BorderBrush="#45ffffff"
                              BorderThickness="1"
                              SelectedColor="{Binding VizualizerTopColor, Converter={converters:StringToColorConverter}}" />
                          </Popup>

                        </Grid>

                        <Grid>
                          <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto" />
                          </Grid.ColumnDefinitions>
                          <TextBlock
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Foreground="#30ffffff"
                            Text="Bar number" />

                          <TextBox
                            Grid.Column="1"
                            Foreground="White"
                            Text="{Binding BarNumber}" />

                        </Grid>

                        <Grid>
                          <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto" />
                          </Grid.ColumnDefinitions>
                          <TextBlock
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Foreground="#30ffffff"
                            Text="Bar Width" />

                          <TextBox
                            Grid.Column="1"
                            Foreground="White"
                            Text="{Binding BarWidth}" />

                        </Grid>

                        <Grid>
                          <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto" />
                          </Grid.ColumnDefinitions>
                          <TextBlock
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Foreground="#30ffffff"
                            Text="Show HUD" />

                          <CheckBox
                            Grid.Column="1"
                            Foreground="White"
                            IsChecked="{Binding ShowHUD}" />

                        </Grid>

                        <Grid>
                          <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto" />
                          </Grid.ColumnDefinitions>
                          <TextBlock
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Foreground="#30ffffff"
                            Text="Show Lyrics" />

                          <CheckBox
                            Grid.Column="1"
                            Foreground="White"
                            IsChecked="{Binding ShowLyrics}" />

                        </Grid>

                      </StackPanel>
                    </Border>

                    <Border Grid.Row="1" Background="#85050505">
                      <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="18"
                        Text="Saving..." />

                      <Border.Style>
                        <Style TargetType="Border">
                          <Setter Property="Visibility" Value="Collapsed" />
                          <Style.Triggers>
                            <DataTrigger Binding="{Binding IsLoading}" Value="True">
                              <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                          </Style.Triggers>
                        </Style>
                      </Border.Style>
                    </Border>
                  </Grid>
                </Border>
              </Popup>



            </Grid>


            <ContentControl
              x:Name="DescriptionText"
              Grid.Row="1"
              Margin="0,0,0,0"
              HorizontalAlignment="Left"
              VerticalAlignment="Top"
              Content="{Binding ActualItem}"
              ContentTemplateSelector="{StaticResource WindowsPlayerItemsTemplateSelectorPlayer}" />


            <userControls:SoundVizualizer
              Grid.Row="2"
              Width="390"
              Height="25"
              Margin="0,0,0,0"
              HorizontalAlignment="Left"
              VerticalAlignment="Top"
              Background="Transparent"
              BottomColor="#fe274b"
              IsEnabled="{Binding IsPlaying, Mode=OneWay, FallbackValue=False}"
              MaxFrequency="10000"
              MiddleColor="{StaticResource DefaultRedColor}"
              MinimumBarWidth="1"
              NormlizedDataMaxSilentValue="5"
              NormlizedDataMaxValue="10"
              NormlizedDataMinValue="3"
              NumberOfColumns="130"
              Opacity="1"
              TopColor="{StaticResource DefaultRedColor}"
              UseSkew="True">

              <userControls:SoundVizualizer.Style>
                <Style TargetType="userControls:SoundVizualizer">
                  <Setter Property="Visibility" Value="Hidden" />

                  <Style.Triggers>
                    <DataTrigger Binding="{Binding IsPlaying}" Value="true">
                      <Setter Property="Visibility" Value="Visible" />
                    </DataTrigger>
                  </Style.Triggers>
                </Style>
              </userControls:SoundVizualizer.Style>
            </userControls:SoundVizualizer>
          </Grid>
        </Grid>
      </Border>

