<Window x:Class="TestingWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestingWpf"
        xmlns:imageGridView="clr-namespace:ImageGridView;assembly=ImageGridView"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="Black">
    <Grid>
        <imageGridView:ImageGridView ItemsSource="{Binding List}" 
                                     Title="{Binding Name}"
                                     SubTitle="{Binding Artist}"
                                     ItemHeight="100"
                                     ItemWitdth="100"
                                     />
    </Grid>
</Window>
